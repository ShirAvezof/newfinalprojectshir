<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/ganNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="שם הגן"
                android:textSize="22sp"
                android:textColor="#4285F4"
                android:textStyle="bold"
                android:textAlignment="viewEnd"/>

            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="חזור"
                android:textColor="#4285F4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:elevation="2dp">

            <TextView
                android:id="@+id/ownerNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="מנהל/ת הגן"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textAlignment="viewEnd"
                android:layout_marginBottom="8dp"/>


            <TextView
                android:id="@+id/addressTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="כתובת:"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textAlignment="viewEnd"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/phoneTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="טלפון ליצירת קשר:"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textAlignment="viewEnd"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:elevation="2dp">

            <TextView
                android:id="@+id/aboutLabelTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="אודות הגן"
                android:textColor="#4285F4"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="viewEnd"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/aboutTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="אין מידע זמין"
                android:textColor="#666666"
                android:textSize="14sp"
                android:textAlignment="viewEnd"
                android:layout_marginBottom="4dp"
                android:lineSpacingExtra="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:elevation="2dp">

            <TextView
                android:id="@+id/hoursLabelTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="שעות פעילות"
                android:textColor="#4285F4"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="viewEnd"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/hoursTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="שעות פעילות הגן:"
                android:textColor="#666666"
                android:textSize="14sp"
                android:textAlignment="viewEnd"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:elevation="2dp">

            <TextView
                android:id="@+id/featuresLabelTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="מאפייני הגן"
                android:textColor="#4285F4"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="viewEnd"
                android:layout_marginBottom="12dp"/>

            <CheckBox
                android:id="@+id/onlineCamerasCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="מצלמות אונליין"
                android:textColor="#333333"
                android:layoutDirection="rtl"
                android:paddingRight="8dp"
                android:layout_marginBottom="4dp"/>

            <CheckBox
                android:id="@+id/closedCircuitCamerasCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="מצלמות מעגל סגור"
                android:textColor="#333333"
                android:layoutDirection="rtl"
                android:paddingRight="8dp"
                android:layout_marginBottom="4dp"/>

            <CheckBox
                android:id="@+id/activeFridaysCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="פעיל ביום שישי"
                android:textColor="#333333"
                android:layoutDirection="rtl"
                android:paddingRight="8dp"
                android:layout_marginBottom="4dp"/>

        </LinearLayout>

        <!-- New License Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:elevation="2dp">

            <TextView
                android:id="@+id/licenseLabelTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="מידע על רישיון"
                android:textColor="#4285F4"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="viewEnd"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/licenseTypeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="סוג רישיון: לא צוין"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textAlignment="viewEnd"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/uploadLicenseImageButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="העלאת תמונת רישיון"
                android:textColor="#FFFFFF"
                android:background="#4285F4"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <ImageView
                android:id="@+id/licenseImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerInside"
                android:background="#EEEEEE"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:elevation="2dp">

            <TextView
                android:id="@+id/galleryLabelTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="תמונות של הגן"
                android:textColor="#4285F4"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="viewEnd"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/galleryImage1"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:layout_margin="4dp"
                    android:background="#EEEEEE"/>

                <ImageView
                    android:id="@+id/galleryImage2"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:layout_margin="4dp"
                    android:background="#EEEEEE"/>

                <ImageView
                    android:id="@+id/galleryImage3"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:layout_margin="4dp"
                    android:background="#EEEEEE"/>
            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/reviewsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="חוות דעת"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="#4285F4"
            android:padding="12dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView>
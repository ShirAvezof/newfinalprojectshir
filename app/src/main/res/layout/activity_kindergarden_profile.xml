<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ganNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="שם הגן"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textAlignment="viewEnd"/>

            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="חזור"
                android:textColor="#0000FF"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <TextView
            android:id="@+id/ownerNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="שם הבעלים"
            android:textColor="#000000"
            android:textAlignment="viewEnd"/>

        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="כתובת:"
            android:textColor="#000000"
            android:textAlignment="viewEnd"/>

        <TextView
            android:id="@+id/phoneTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="טלפון ליצירת קשר:"
            android:textColor="#000000"
            android:textAlignment="viewEnd"/>

        <TextView
            android:id="@+id/aboutTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="אודות הגן:"
            android:textColor="#000000"
            android:textAlignment="viewEnd"/>

        <TextView
            android:id="@+id/hoursTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="שעות פעילות הגן:"
            android:textColor="#000000"
            android:textAlignment="viewEnd"/>

        <CheckBox
            android:id="@+id/onlineCamerasCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="מצלמות אונליין"
            android:layoutDirection="rtl"
            android:layout_gravity="right"/>

        <CheckBox
            android:id="@+id/closedCircuitCamerasCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="מצלמות מעגל סגור"
            android:layoutDirection="rtl"
            android:layout_gravity="right"/>

        <CheckBox
            android:id="@+id/activeFridaysCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" פעיל ביום שישי"
            android:layoutDirection="rtl"
            android:layout_gravity="right"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="רישיון עסק בתוקף"
                android:textAlignment="viewEnd"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/businessLicenseImageView"
                android:layout_width="24dp"
                android:layout_height="24dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="תמונות של הגן"
            android:textAlignment="viewEnd"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/galleryImage1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:layout_margin="4dp"/>

            <ImageView
                android:id="@+id/galleryImage2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:layout_margin="4dp"/>

            <ImageView
                android:id="@+id/galleryImage3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:layout_margin="4dp"/>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <Button
            android:id="@+id/reviewsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="חוות דעת"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_background"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="נתחיל בחיפוש"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_gravity="right"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="עיר"
        android:textColor="#000000"
        android:layout_gravity="right"
        android:layout_marginBottom="8dp"/>

    <CheckBox
        android:id="@+id/onlineRegistrationCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="מצלמות אונליין"
        android:layoutDirection="rtl"
        android:layout_gravity="right"
        android:layout_marginBottom="8dp"/>

    <CheckBox
        android:id="@+id/summerActivityCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="מצלמות מעגל סגור"
        android:layoutDirection="rtl"
        android:layout_gravity="right"
        android:layout_marginBottom="8dp"/>

    <CheckBox
        android:id="@+id/augustActivityCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="גן פעיל ביום שישי"
        android:layoutDirection="rtl"
        android:layout_gravity="right"
        android:layout_marginBottom="8dp"/>


    <Button
        android:id="@+id/searchButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="חפש"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:menu="@menu/bottom_nav_menu"
            android:layout_alignParentBottom="true"/>


</LinearLayout>